<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp">
    <ImageView
        android:id="@+id/iv_new_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        tools:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/tv_new_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_new_image"
        app:layout_constraintStart_toStartOf="@id/iv_new_image"
        app:layout_constraintEnd_toEndOf="@id/iv_new_image"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="ddddd"
        android:maxLines="2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
