<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#EFEFEF">
    <EditText
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@drawable/shape_search"
        android:hint="     검색어를 입력해주요."/>

    <ImageView
        android:id="@+id/news"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_news"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/shop"/>
    <ImageView
        android:id="@+id/shop"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_shop"
        app:layout_constraintTop_toTopOf="@id/news"
        app:layout_constraintStart_toEndOf="@id/news"
        app:layout_constraintEnd_toStartOf="@id/economy"/>
    <ImageView
        android:id="@+id/economy"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_economy"
        app:layout_constraintTop_toTopOf="@id/shop"
        app:layout_constraintStart_toEndOf="@id/shop"
        app:layout_constraintEnd_toStartOf="@id/clip"/>
    <ImageView
        android:id="@+id/clip"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_clip"
        app:layout_constraintTop_toTopOf="@id/economy"
        app:layout_constraintStart_toEndOf="@id/economy"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_news"
        android:layout_width="44dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/news"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_cafe"
        android:text="뉴스판"
        android:textAlignment="center"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/text_shop"
        android:layout_width="44dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/text_news"
        app:layout_constraintStart_toEndOf="@id/text_news"
        app:layout_constraintEnd_toStartOf="@id/text_economy"
        android:text="쇼핑판"
        android:textAlignment="center"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/text_economy"
        android:layout_width="44dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/text_shop"
        app:layout_constraintStart_toEndOf="@id/text_shop"
        app:layout_constraintEnd_toStartOf="@id/text_clip"
        android:text="경제판"
        android:textAlignment="center"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/text_clip"
        android:layout_width="44dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/text_economy"
        app:layout_constraintStart_toEndOf="@id/text_economy"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="클립판"
        android:textAlignment="center"
        android:textSize="12dp"/>

    <ImageView
        android:id="@+id/male"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_mail"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_news"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cafe"/>
    <ImageView
        android:id="@+id/cafe"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_cafe"
        app:layout_constraintTop_toTopOf="@id/male"
        app:layout_constraintStart_toEndOf="@id/male"
        app:layout_constraintEnd_toStartOf="@id/blog"/>
    <ImageView
        android:id="@+id/blog"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_blog"
        app:layout_constraintTop_toTopOf="@id/cafe"
        app:layout_constraintStart_toEndOf="@id/cafe"
        app:layout_constraintEnd_toStartOf="@id/more"/>
    <ImageView
        android:id="@+id/more"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_more"
        app:layout_constraintTop_toTopOf="@id/blog"
        app:layout_constraintStart_toEndOf="@id/blog"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_male"
        android:layout_width="44dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/male"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_cafe"
        android:text="메일"
        android:textAlignment="center"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/text_cafe"
        android:layout_width="44dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/text_male"
        app:layout_constraintStart_toEndOf="@id/text_male"
        app:layout_constraintEnd_toStartOf="@id/text_blog"
        android:text="카페"
        android:textAlignment="center"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/text_blog"
        android:layout_width="44dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/text_cafe"
        app:layout_constraintStart_toEndOf="@+id/text_cafe"
        app:layout_constraintEnd_toStartOf="@+id/text_more"
        android:text="블로그"
        android:textAlignment="center"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/text_more"
        android:layout_width="44dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/text_blog"
        app:layout_constraintStart_toEndOf="@id/text_blog"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=""
        android:textAlignment="center"
        android:textSize="12dp"/>


    <ImageView
        android:id="@+id/rolex"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/image_rolex"
        android:layout_marginTop="250dp"
        app:layout_constraintTop_toTopOf="@id/male"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@drawable/shape_white"
        android:padding="15dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/rolex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linear2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23.8° 청주"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어제보다 2.9° 높아요"
            android:textSize="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@drawable/shape_white"
        android:padding="15dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/rolex"
        app:layout_constraintStart_toEndOf="@id/linear1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,684.28"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코스피"
            android:textSize="10dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>